{
  "name": "banka",
  "version": "1.0.0",
  "description": "a lightweight core banking application",
  "main": "index.js",
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon --exec babel-node index.js",
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text-lcov ./node_modules/.bin/mocha --exit --timeout 10000 --reporter spec --require @babel/register ./test/*.js",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tolulope-od/banka.git"
  },
  "keywords": [
    "finance",
    "account-management",
    "banking"
  ],
  "author": "Tolulope Odueke",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tolulope-od/banka/issues"
  },
  "homepage": "https://github.com/tolulope-od/banka#readme",
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.2",
    "babel-plugin-istanbul": "^5.1.1",
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "dotenv": "^7.0.0",
    "express": "^4.16.4"
  }
}
